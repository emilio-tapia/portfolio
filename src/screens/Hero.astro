---
import ButtonChevronDown from "@/components/icons/arrows/ButtonChevronDown.astro";
import ComponentBoundaries from "@/layout/ComponentBoundaries.astro";
---

<section class="self-stretch">
  <ComponentBoundaries
    className="p-12 shape-1 shape-theme mx-auto min-w-[37rem]"
  >
    <div class="grid [grid-template-rows:_auto_1fr_auto]
    h-[88%]">
      <span class="text-ligth-label text-center font-medium text-lg"
        >Bienvenido, soy</span
      >
      <div
        class="*:font-semibold mt-4 *:block *:text-center *:grad_ligth-gb *:text-gradient"
      >
        <h2 class="text-6xl">Diseñador</h2>
        <h2 class="text-8xl">UI/UX</h2>
      </div>
      <div class="text-ligth-label text-center">
        <span>La interactividad es el mejor camino.</span>
        <br />
      </div>
    </div>
  </ComponentBoundaries>
  <a href="/nav">
    <button
      class="absolute rounded-[1.35rem] px-5 bottom-[1.4%] left-1/2 -translate-x-1/2 border border-solid buttonbehavior"
    >
      <div class="flex items-center mr-[0.8rem] ml-[0.1rem]">
        <ButtonChevronDown /> Conoce más
      </div>
    </button>
  </a>
</section>
