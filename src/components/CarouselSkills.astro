---
import { Icon } from 'astro-icon';
---



<ul class="carousel--list">
    <li><i><Icon name="skills-html"/></i><span>HTML</span></li>
    <li><i><Icon name="skills-css"/></i><span>CSS</span></li>
    <li><i><Icon name="skills-sass"/></i><span>Sass</span></li>
    <li><i><Icon name="skills-js"/></i><span>JS</span></li>
    <li><i><Icon name="skills-astro"/></i><span>Astro</span></li>
    <li><i><Icon name="skills-gsap"/></i><span>GSAP</span></li>
    <li><i><Icon name="skills-node"/></i><span>Node JS</span></li>               
</ul>

<style lang="scss">
    
    .carousel--list{
        display: grid;
        gap: 1rem;
        grid-template-columns: repeat(auto-fill, minmax(70px, 1fr));

        span{
            font-weight: bolder;
            color: var(--text-color-80);
        }

        li{
            display: grid;
            place-items: center;
            gap: 0.5rem;
        }

        i{
            display: flex;
            position: relative;
            flex-direction: column;
            align-items: center;
            border-radius: 10px;
            // border: 1px solid black;
            padding-block: .5rem;
            background: linear-gradient(352deg,#585757b5 -233%,transparent 88%);
            box-shadow: 0px 3px 5px 3px rgba(0,0,0,0.05);
            padding-inline: 0.5em;

            &:hover{
                transform: scale(1.05);
                transition: 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            }

        }
    }

    [astro-icon] {
        width: 55px;
    }

    ::-webkit-scrollbar {
            width: 0;
            display: none;
            }

    
</style>