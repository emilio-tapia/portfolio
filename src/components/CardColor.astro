---
import { t } from "i18next";
import ButtonPrimary from "./ButtonPrimary.astro";

const { time, name, description, url, dataColor, nameBgImg } = Astro.props

const urlBgImg = `url("/images/${nameBgImg}")`
---

<div class="card-color" data-card-color={dataColor}>
    <div class="card-color--layout">
        <div class="card-color--time">
            <small>{time}</small>
        </div>
        <h4>{name}</h4>
        <span>{description}</span>
        <ButtonPrimary text={t("extra.visitWeb")} url={url}></ButtonPrimary>
    </div>
</div>

<style lang="scss" define:vars={{ urlBgImg }}>

    .card-color{
        background: linear-gradient(329.13deg, #0044CB -0.94%, #0086D4 68.8%);
        color: var(--text-light-color);
        position: relative;

        box-shadow: 0px 3px 37px 2px rgba(0, 0, 0, 0.25);
        border-radius: 20px;
        overflow: hidden;

        &::before{
            content: '';
            background: var(--urlBgImg);
            background-position: center;
            background-size: 140%;
            background-repeat: no-repeat;
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            opacity: .3;
        }
    }

    [data-card-color="blue"]{
        background: linear-gradient(329.13deg, #0044CB -0.94%, #0086D4 68.8%);
    }

    [data-card-color="green"]{
        background: linear-gradient(329.13deg, #00A879 -0.94%, #00A36D 28.26%);
    }

    .card-color--layout{
        padding: min(4rem, 10vw);
        display: grid;
        text-align: center;
        justify-items: center;
        gap: 1rem;
        z-index: 30;
        position: relative;
    }
    
    h4{
        // font-family: "SF Pro Text";
        // font-family: "SF Pro Text";
        font-weight: bolder;
        line-height: 120%;
    }
    .card-color--time{
        display: grid;
        padding-block: 0.25rem;
        padding-inline: 1rem;
        border-radius: 0.5rem;
        place-content: center;
        background: var(--text-color-100);
    }

</style>