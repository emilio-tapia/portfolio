---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import ComponentBoundaries from "../ComponentBoundaries.astro";
import Icon from "astro-icon";
import TitleSectionGrid from "@/components/text/TitleSectionGrid.astro";
const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<section
  class="summary grid items-start lg:grid-cols-[2fr_1fr] max-lg:divide-y lg:divide-x divide-black"
  id="studies"
>
  <ComponentBoundaries
    className="bg-[#fad05b] p-8 h-full relative overflow-hidden"
  >
    <Icon name="info-studies" class="w-8" />
    <div class="study">
      <small>{t("study")["1"].year}</small>
      <h6>{t("study")["1"].college}</h6>
      <span>{t("study")["1"].bachelor}</span>
    </div>

    <div
      class="absolute right-[15%] w-auto bottom-[50%] opacity-10 h-[120%] [translate:50%_50%]"
    >
      <Icon name="info-studies" class="w-auto h-full" />
    </div>
  </ComponentBoundaries>
  <TitleSectionGrid color="dark:text-pal_lightyellow">
    {t("menu").study}
  </TitleSectionGrid>
</section>

<style lang="scss">
  .summary--name {
    text-transform: uppercase;
    display: grid;
    gap: 2rem;

    h2 {
      line-height: 0.75;
    }

    h3 {
      font-weight: 400;
      font-style: italic;
      line-height: 1.2;
    }
  }
</style>
