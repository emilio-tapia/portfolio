---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import ComponentBoundaries from "../ComponentBoundaries.astro";
import Icon from "astro-icon";
import CarouselSkills from "@/components/CarouselSkills.astro";
import TitleSectionGrid from "@/components/text/TitleSectionGrid.astro";
const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<section
  class="summary grid items-start sm:grid-cols-[4fr_2fr] max-sm:divide-y sm:divide-x divide-black"
  id="projects"
>
  <TitleSectionGrid color="dark:text-pal_lightyellow">
    {t("menu").project}
    <i class="w-fit hidden mx-auto sm:inline-block"
      ><Icon
        name="caret-down"
        class="fill-current [width:max(1rem,10vw)] min-[500px]:w-12"
      /></i
    >
  </TitleSectionGrid>
  <ComponentBoundaries
    className="bg-[#fad05b] p-8 h-full relative overflow-hidden"
  >
    <CarouselSkills />

    <div
      class="absolute right-[15%] w-auto bottom-[50%] opacity-10 h-[120%] [translate:50%_50%]"
    >
      <Icon name="info-studies" class="w-auto h-full" />
    </div>
  </ComponentBoundaries>
</section>

<style lang="scss">
  .summary--name {
    text-transform: uppercase;
    display: grid;
    gap: 2rem;

    h2 {
      line-height: 0.75;
    }

    h3 {
      font-weight: 400;
      font-style: italic;
      line-height: 1.2;
    }
  }
</style>
